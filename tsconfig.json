{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src"
    ],
    "types": [
      "chrome",
      "node"
    ],
    "outDir": "./extension/js",
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "src/js/popup.js",
    "src/js/inject.ts",
    "src/js/background.js",
    "src/js/content.ts",
    "src/js/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}